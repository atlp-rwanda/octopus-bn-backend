{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "nyc": {
    "include": "src",
    "exclude": [
      "build",
      "**/tests",
      "**/index.js"
    ]
  },
  "scripts": {
    "start": "node --require @babel/polyfill build/index.js",
    "dev": "nodemon --exec babel-node src/index.js",
    "test": "NODE_ENV=test npm run migrateTest && NODE_ENV=test nyc --reporter=html --reporter=text mocha --require @babel/polyfill --require @babel/register 'src/**/**test.js'  --timeout 500000000 --exit",
    "migrateTest": "node_modules/.bin/sequelize db:migrate:undo:all && node_modules/.bin/sequelize db:migrate && node_modules/.bin/sequelize db:seed:all",
    "lint": "eslint ./src",
    "lintFix": "eslint --fix ./src",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "migration": "npm run revertMigration && npm run migrateDb && npm run seedDb",
    "migrateDb": "node_modules/.bin/sequelize db:migrate && npm run seedSuper",
    "revertMigration": "node_modules/.bin/sequelize db:migrate:undo:all",
    "seedDb": "node_modules/.bin/sequelize db:seed:all",
    "seedSuper": "npm run revertSeed && sequelize db:seed --seed 20200211104632-dummy-users",
    "revertSeed": "sequelize db:seed:undo:all",
    "clean": "rm -rf build && mkdir build",
    "build-src": "babel -d ./build ./src -s",
    "build": "npm run migrateDb && npm run clean && npm run build-src",
    "docker": "docker-compose up --build"
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/polyfill": "^7.8.3",
    "@sendgrid/mail": "^6.5.2",
    "babel-plugin-module-resolver": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.4",
    "coveralls": "^3.0.9",
    "dotenv": "^6.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-jwt": "^6.0.0",
    "express-rate-limit": "^5.1.1",
    "express-session": "^1.17.0",
    "express-validator": "^6.4.0",
    "i18n-2": "^0.7.3",
    "joi": "^14.3.1",
    "joi-country-extension": "^1.2.0",
    "joi-date-extensions": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "localStorage": "^1.0.4",
    "mailgen": "^2.0.10",
    "method-override": "^2.3.10",
    "methods": "^1.1.2",
    "mocha-lcov-reporter": "^1.3.0",
    "moment": "^2.24.0",
    "mongoose": "^5.2.2",
    "mongoose-unique-validator": "^2.0.1",
    "morgan": "^1.9.1",
    "node-mocks-http": "^1.8.1",
    "nyc": "^15.0.0",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.18.1",
    "request": "^2.87.0",
    "sequelize": "^5.21.3",
    "sinon": "^9.0.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "swagger-jsdoc": "^3.5.0",
    "swagger-ui-express": "^4.1.3",
    "underscore": "^1.9.1",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/register": "^7.8.3",
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.2",
    "sequelize-cli": "^5.5.1"
  },
  "engines": {
    "node": "12",
    "npm": "6.13.4"
  }
}
